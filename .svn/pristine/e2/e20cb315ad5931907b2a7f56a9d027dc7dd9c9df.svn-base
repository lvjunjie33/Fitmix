<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<div class="background">
    <div class="filter"></div>
    <div id="forget-bar" class="forget-bar">
        <div class="forget-content">
            <div class="forget-head">
                <div class="logo"></div>
                <h4>找回密码</h4>
            </div>
            <div class="forget-main">
                <div class="forget-type">
                    <div class="forget-type-phone checked" id="forget-type-phone">手机找回</div>
                    <div class="forget-type-email" id="forget-type-email">邮箱找回</div>
                </div>
                <div class="forget-phone">
                    <div>
                        <label>
                            <input id="phone-item" type="tel" placeholder="+86 请输入手机号码"/>
                        </label>
                        <label id="phone-null">
                            请输入手机号码
                        </label>
                        <label id="phone-pattern-error">
                            手机号码格式不正确
                        </label>
                        <label class="wap-resend-label">
                            <input class="code-item" type="text" placeholder="请输入验证码"/>
                            <button id="get-code-btn">获取验证码</button>
                        </label>
                        <label id="code-null">
                            请输入验证码
                        </label>
                        <label class="psw-label">
                            <input type="password" id="psw-ph" placeholder="请输入6-20位密码"/>
                        </label>
                        <label class="reinput-psw-label">
                            <input type="password" id="c-psw-ph" placeholder="请再次输入密码"/>
                        </label>
                        <label id="psw-difference">
                            密码不一致
                        </label>
                        <label id="psw-null">
                            密码为空
                        </label>
                        <div class="forget-btn">
                            <button id="find-psw-btn-ph">提交</button>
                        </div>
                    </div>
                </div>
                <div class="forget-email" style="display: none;">
                    <div>
                        <label class="input-email-label">
                            <input id="email" type="text" placeholder="请输入注册邮箱"/>
                        </label>
                        <label id="email-null">
                            请输入注册邮箱
                        </label>
                        <label id="email-error">
                            邮箱格式错误
                        </label>
                        <div class="forget-btn">
                            <button id="find-psw-btn-email">提交</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
