///
/// shading-blue

.shadingBackColor (@src, @target) {
  @keyframes shadingBackColor {
    0% {
      background-color: @src;
    }
    100% {
      background-color: @target;
    }
  }
}


.shadingFontColor (@src, @target) {
  @keyframes shadingFontColor {
    0% {
      color: @src;
    }
    60% {
      color: @target;
    }
    100% {
      color: @target;
    }
  }
}

.shading-blue:hover {
  .animated;
  .shadingBackColor(@link-color, @link-hover-color);
  animation-name: shadingBackColor;
}


.shadingFontColorBlue:hover {
  .animated;
  .shadingFontColor(@color-text, @link-hover-color);
  animation-name: shadingFontColor;
}




//
//填满整个屏幕 图片, 580 768 922 1300
//分为 phone pad pc

.full-image (@phone, @pad, @pc, @heightPhone:300px, @heightPad:300px, @heightPc:515px){

  overflow: hidden;
  height: @heightPhone;
  display: block;
  background: url(@phone) no-repeat center center;
  background-size : cover;

  @media (min-width: 580px) {
    height: @heightPhone;
    background: url(@pad) no-repeat center center;
    background-size : cover;
  }

  @media (min-width: 768px) {
    height: @heightPad;
    background: url(@pad) no-repeat center center;
    background-size : cover;
  }

  @media (min-width: 922px) {
    height: @heightPc;
    background: url(@pad) no-repeat center center;
    background-size : cover;
  }

  @media (min-width: 1300px) {
    height: @heightPc;
    background: url(@pc) no-repeat center center;
    background-size : cover;
  }
}


// resize
.resize(@widthPhone, @widthPad, @widthPc) {
  width: @widthPhone;

  @media (min-width: 580px) {
    width: @widthPhone;
  }

  @media (min-width: 768px) {
    width: @widthPad;
  }

  @media (min-width: 922px) {
    width: @widthPc;
  }

  @media (min-width: 1300px) {
    width: @widthPc;
  }
}


