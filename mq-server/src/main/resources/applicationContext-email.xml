<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd"
       default-lazy-init="false">

    <description>Email配置</description>

    <!-- 用于生成HTML邮件内容的Freemarker配置 -->
    <!--<bean id="freemarkerConfiguration" class="org.springframework.ui.freemarker.FreeMarkerConfigurationFactoryBean">
        <property name="templateLoaderPath" value="classpath:/email" />
    </bean>-->

    <!-- 邮件发送器 -->
    <bean id="monitorMailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="smtp.exmail.qq.com"/>
        <property name="username" value="${monitorMailSender.username}"/>
        <property name="password" value="${monitorMailSender.password}"/>
        <property name="defaultEncoding" value="UTF-8"/>
        <property name="javaMailProperties">
            <props>
                <prop key="mail.smtp.auth">true</prop>
                <!-- 使用gmail smtp server的必须参数 -->
                <prop key="mail.smtp.starttls.enable">true</prop>
                <prop key="mail.smtp.connectiontimeout">5000</prop>
                <prop key="mail.smtp.timeout">20000</prop>
            </props>
        </property>
    </bean>



</beans>
